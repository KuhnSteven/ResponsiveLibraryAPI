}

// Move navigation toggle to the end of the screen
#mobileNavToggle {
    display: flex;
    justify-content: flex-end;
}

// Mobile Media 1st
@media only screen and (max-width: 800px) {

    // Display nav toggle
    #mobileNavToggle a.openMobileNav {
        display: inline-block;
    }
    #navigation:target {
        display: flex;
        flex-direction: column;
    }

    /* Hide the open button, show the close button */
    #navigation:target #mobileNavToggle a.openMobileNav {
        display: none;
    }
    #navigation:target #mobileNavToggle a.closeMobileNav {
        display: inline-block;
    }

    #results {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        margin: 1px;
    }

    /* End of mobile media rules */
}